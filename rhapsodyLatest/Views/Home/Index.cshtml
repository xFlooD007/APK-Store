@using rhapsodyLatest.Models
@{
    ViewBag.Title = "Home";
    var categories = (List<CategoryModel>)ViewBag.Categories;
}
<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="/images/MadOut2 BigCityOnline.jpg" alt="ASP.NET" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="/images/MarvelFutureFight.jpg" alt="Visual Studio" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>

                    </p>
                </div>
            </div>
            <div class="item">
                <img src="/images/tiktok.jpg" alt="Microsoft Azure" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>

                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    @foreach (var cat in categories)
    {


    <div class="app_category">
        <div class="category_title">
            <a href="/Category?id=@cat.ID"><p>@cat.Name</p></a>
        </div>
        <div class="swiper-container cards">
            <div class="swiper-wrapper">
            @for (int x = 0; x < 20; x++)
            {
                if (cat.APKs.Count() > x)
                {
                <a style="text-decoration: none;" href="/apk?id=@cat.APKs[x].id">
                    <div class="swiper-slide card">
                        <img src="@cat.APKs[x].img" alt="">
                        <div class="card_info">
                            <p class="app_name">@cat.APKs[x].name</p>

                            <div>
                                @for (int i = 0; i < cat.APKs[x].rate && i < 5; i++)
                                {
                                    <i class="fa fa-star"></i>
                                }
                                @for (int i = 0; i < 5 - cat.APKs[x].rate && i < 5; i++)
                                {
                                    <i class="fa fa-star-o" aria-hidden="true"></i>
                                }
                                
                            </div>

                            <p class="app_date">@cat.APKs[x].date</p>
                            <div><button><a href="@Url.Content("/apk/download?id="+cat.APKs[x].id)">Download</a></button></div>
                        </div>
                    </div>
                </a>
                }
                else
                {
                    break;
                }
            }

            </div>
        </div>
    </div>

    }

</div>