
@{
    ViewBag.Title = "Index";
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Itim&display=swap" rel="stylesheet">
    <title>@ViewBag.Title - Rhapsody Dashboard</title>
    <link rel="stylesheet" href="~/rhapsodylatest/Content/dashboard.css">
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="menu-icon">
        <span class="one_s"></span>
        <span class="two_s"></span>
        <span class="three_s"></span>
    </div>
    <div class="page-content">
        <div class="sallers-page y width-content" style="overflow: auto;">
            <div class="top-bar">
                <div class="tobar-content-left cont">
                    <div class="user-info">
                        <img src="~/rhapsodylatest/icons/109826775_1565360223625982_6140403979713903862_o.jpg" alt="">
                        <div>
                            <p class="user-name-p">@User.Identity.Name</p>
                            <span>@User.Role()</span>
                        </div>
                        <i class="fa fa-star star"></i>
                    </div>
                </div>
            </div>

            @RenderBody()


        </div>
        <div class="slide-bar">
            <a href="/"><img src="@Url.Content("~/images/logo.png")" alt="" class="logo-e3"></a>
            <ul>
                <a href="/dashboard" class="active main"><li class="active"><i class="fas fa-university text-light"></i> Statistics</li></a>
                @if (User.Role() == "Admin" || User.Role() == "Owner")
                {
                    <a href="/dashboard/ContentManagement" class="manegement">
                        <li style="font-size: 15px;">
                            <i class="fas fa-cogs"></i> Management <br />


                            <table class="right-margin tab" style="display:none;">
                                <thead>
                                    <tr>
                                        <th dir="rtl" class="small-size"><a href="/Dashboard/AddApk" class="list-hover">+ Add New APK</a></th>
                                    </tr>
                                </thead>
                            </table>


                        </li>
                    </a>
                }
                <a href="/dashboard/LogOut"><li><i class="fas fa-sign-out-alt"></i> Logout</li></a>
            </ul>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/a1a75d5546.js" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="~/Scripts/app.js"></script>
</body>
</html>